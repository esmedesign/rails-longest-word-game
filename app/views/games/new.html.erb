<h1>New game</h1>
<div class="letters-container">
  <% @dictionary_letters.each do |letter| %>
    <p><%= letter %></p>
  <% end %>
</div>

<form action="/score" method="post" data-turbo="false">
  <input type="text" name="word" class="form-control mr-2">
  <%= hidden_field_tag :dictionary_letters, @dictionary_letters %>
  <input type="submit" class="btn btn-primary" value="Ask!">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
